---
import { ItemsPosition, ItemsPositionClass } from '../scripts/tailwindTypes';

interface Props {
  flex?: boolean;
  align?: ItemsPosition;
}

const { flex = true, align = 'center' } = Astro.props;
let classList: [string, ItemsPositionClass] = null;
if (flex) {
  classList = [
    'flex flex-col',
    `items-${align}`
  ];
}
---

<section class="mx-8">
  <div class:list={['container', classList]}>
    <slot />
  </div>
</section>

<style></style>
