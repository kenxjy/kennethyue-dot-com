---
interface Props {
  info: {
    name: string;
    startYear: number;
    endYear: number;
    degreeName: string;
    description?: string;
  };
}

const { name, startYear, endYear, degreeName, description } = Astro.props.info;
---

<div
  class="flex flex-col border-b border-b-gray-100 pb-4 text-base last:border-b-0 last:pb-0 dark:border-b-gray-800"
>
  <h3 class="text-lg font-bold md:text-xl">{name}</h3>
  <span class="font-md italic md:text-lg">{degreeName}</span>
  <span class="font-md italic md:text-lg">{startYear} - {endYear}</span>
  <div class="whitespace-pre-wrap">{description}</div>
</div>

<style></style>
