---
import SectionHeader from './SectionHeader.astro';
import { NAME } from '../scripts/globals';
import Nav from './Nav.astro';
---

<div
  class="fixed bottom-[calc(100vh-1px)] left-0 right-0 h-screen bg-slate-50 dark:bg-slate-950"
>
</div>
<div
  class="fixed top-0 -z-10 h-screen-sm w-screen bg-[url('/images/portrait/20230429_portrait_lg.jpg')] bg-cover bg-center"
>
</div>
<div class="grid h-screen-sm auto-cols-auto grid-rows-[auto_1fr]">
  <Nav showBackground={true} />
  <div
    id="title-container"
    class="m-0 flex h-[45svh] items-end justify-center self-end bg-gradient-to-t from-slate-50 from-5% via-slate-50/50 via-40% to-transparent to-100% p-[5vh] dark:from-slate-950 dark:via-slate-950/50"
  >
    <SectionHeader
      color="text-slate-900 dark:text-slate-50"
      beforeLineColor="before:bg-slate-900 before:dark:bg-slate-50"
      afterLineColor="after:bg-slate-900 after:dark:bg-slate-50"
      title={NAME}
      tagline="Hello! I am a Software Developer currently based in Toronto, Ontario"
    />
  </div>
</div>

