---
import SectionHeader from "./SectionHeader.astro";
import { NAME } from "../scripts/globals";
import Nav from "./Nav.astro";

---
<div id="background"></div>
<div id="home-page-header">
  <Nav showBackground={true} />
  <div id="title-container">
    <SectionHeader
      color="var(--gray-0)"
      title={NAME}
      tagline="Hello! I am a Software Developer currently based in Toronto, Ontario"
    />
  </div>
</div>

<style>
  i {
    margin-bottom: 0.25rem;
  }

  #home-page-header {
    height: 100vh;
    width: 100vw;
    display: grid;
    grid-template: auto 1fr auto / auto;
  }

  #spacer {
    /* height: 30vh; */
  }
  
  #title-container {
    grid-area: 3 / 1;
    height: 70vh;
    padding: 5vh;
    margin: 0;
    display: flex;
    align-items: center;
    flex-direction: column-reverse;
    background: var(--gray-999);
		background: linear-gradient(
			0deg,
			hsla(var(--gray-999-basis), 1) 0%,
			hsla(var(--gray-999-basis), 0.5) 40%,
			hsla(var(--gray-999-basis), 0) 100%
		);
  }

  #background {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    z-index: -2;
    background-image: url('/images/header-background.jpeg');
    background-position: center;
    background-size: cover;
  }
</style>