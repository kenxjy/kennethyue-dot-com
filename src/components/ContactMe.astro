---
import ActionButton from './ActionButton.astro';
import Icon from './Icon.astro';
---

<aside>
  <div class="wrapper contact-me-box gap-4">
    <h2>Let's connect!</h2>
    <div class="button-container gap-2">
      <ActionButton href="mailto:me@example.com">
        Email
        <Icon icon="envelope" size="1.2em" />
      </ActionButton>
      <ActionButton href="mailto:me@example.com">
        LinkedIn
        <Icon icon="linkedin-logo" size="1.2em" />
      </ActionButton>
    </div>
  </div>
</aside>

<style>
  .contact-me-box {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }

	aside {
		display: flex;
		flex-direction: column;
		align-items: center;
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
    padding: 2.5rem 0;
	}

  .button-container {
    display: flex;
    flex-direction: column;
    width: min-content;
  }

	h2 {
		font-size: var(--text-xl);
		text-align: center;
		max-width: 15ch;
	}

	@media (min-width: 50em) {
		aside {
			padding: 5rem 0;
			flex-wrap: wrap;
			justify-content: space-between;
		}

    .button-container {
      flex-direction: row;
    }

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}
	}
</style>
