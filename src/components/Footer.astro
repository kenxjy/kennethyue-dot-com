---
import { NAME, LINKS } from '../scripts/globals';
const currentYear = new Date().getFullYear();

const links = [
  { href: LINKS.linkedin, text: 'LinkedIn' },
  { href: LINKS.github, text: 'GitHub' },
];
---

<footer
  class="flex flex-col gap-12 px-8 py-12 text-center text-sm text-slate-600 dark:text-slate-400 md:flex-row md:justify-between md:px-20 md:py-10"
>
  <div class="flex flex-col gap-2 md:flex-row md:flex-wrap md:gap-4">
    <p>&copy; {currentYear} {NAME}</p>
  </div>
  <p class="flex flex-wrap justify-center gap-4 md:justify-end">
    {
      links.map((link) => (
        <a
          class="text-slate-600 underline decoration-transparent decoration-solid transition duration-200 ease-in-out hover:decoration-current focus:decoration-current dark:text-slate-400"
          href={link.href}
        >
          {link.text}
        </a>
      ))
    }
  </p>
</footer>
